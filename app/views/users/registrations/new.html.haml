.ui.container
  .ui.centered.padded.grid
    .sixteen.wide.mobile.twelve.wide.tablet.eight.wide.computer.column
      .ui.top.attached.center.aligned.secondary.segment
        %h3 Sign up

      .ui.attached.segment
        = form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui large form' } do |f|
          = devise_error_messages!

          .field
            = f.label :email
            = f.email_field :email, autofocus: true, placeholder: 'name@domain.com'

          .field
            = f.label :password
            = f.password_field :password, autocomplete: 'off', placeholder: 'password'

          = f.submit 'Sign up for free', class: 'ui large blue button'

      .ui.bottom.attached.info.message
        %p
          %span Already have an account?
          = link_to 'Sign in', new_user_session_path
          %span instead.

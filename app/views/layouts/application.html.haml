!!! 5
%html
  %head
    %meta(charset='utf-8')
    %meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
    %meta(name='viewport' content='width=device-width, initial-scale=1.0')
    %title Youtiao
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

%body(style="padding-top: 46px;")
  .ui.large.top.fixed.borderless.menu
    .ui.container
      = link_to t('youtiao'), root_path, class: 'header item'
      .right.menu
        = link_to t('about'), page_path('about'), class: 'item'

  = yield

  .ui.vertical.very.padded.center.aligned.segment
    .ui.container
      .ui.stackable.grid
        .centered.column
          %p 
            %span Made with
            %i.red.heart.icon
            %span by Youtiao
          %small Copyright 2015, Youtiao Inc.

!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge, chrome=1' }
    %meta{ name: 'viewport', content: 'width=device-width', 'initial-scale' => '1.0' }
    %title Youtiao
    -# = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    -# = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

%body
  .flash.wrapper
    - if !flash[:alert].blank?
      .ui.small.compact.red.flash.message
        %p= alert
    - elsif !flash[:notice].blank?
      .ui.small.compact.green.flash.message
        %p= notice

  .ui.huge.attached.borderless.menu
    .ui.container
      = link_to t('youtiao'), root_path, class: 'header item'

  = yield

  .ui.vertical.very.padded.center.aligned.segment
    .ui.container
      .ui.stackable.grid
        .centered.column
          %p 
            %span Made with
            %i.red.heart.icon
            %span by Youtiao
